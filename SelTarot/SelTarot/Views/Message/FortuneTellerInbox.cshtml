<style>
    .card {
        border-radius: 0.5rem;
    }

    .card-header {
        border-bottom: 2px solid #007bff;
    }

    .table {
        table-layout: auto;
        width: 100%;
    }

        .table th, .table td {
            vertical-align: middle;
            padding: 0.75rem;
            white-space: nowrap;
        }

        .table th {
            background-color: #f8f9fa;
        }

    .btn-sm {
        padding: 0.25rem 0.5rem;
        font-size: 0.875rem;
        line-height: 1.5;
    }

    .header-title {
        display: inline-block;
        margin-right: 1rem; /* Başlık ve düğme arasında boşluk */
    }

    .table-responsive {
        width: 1150px;
        background-color: #fff;
        margin-top: 15px;
        overflow: hidden;
    }

    .container {
        width: 95%;
        max-width: 1200px;
        margin: 20px auto;
        padding: 20px;
        background-color: rgba(255, 255, 255, 0.9);
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        border-radius: 8px;
        position: relative;
        overflow: hidden;
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
        color: #fff;
        padding: 8px 16px;
        border-radius: 4px;
        text-decoration: none;
        cursor: pointer;
        display: inline-block;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }
</style>

@model InboxViewModel

@{
    ViewData["Title"] = "Gelen Kutusu";
}

<div class="container">
    <h1 class="text-center mb-4">Gelen Kutusu</h1>

  
        <!-- Direkt başlık ve düğme yerleştirildi -->
       
           
        <div class="table-responsive">
            <div class="card-header">
                <h4 class="mb-0">Gelen Mesajlar</h4>
                <a asp-action="SendMessageToUser" class="btn btn-primary btn-sm">Yeni Mesaj Gönder</a>
            </div>


        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover table-striped table-bordered">
                    <thead class="thead-light">
                        <tr>
                            <th>Gönderen Idsi</th>
                            <th>Gönderen</th>
                            <th>Alıcı</th>
                            <th>Mesaj</th>
                            <th>Tarih</th>
                          
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var message in Model.ReceivedMessages)
                        {
                            <tr>
                                <td>@(message.SenderId.ToString() ?? "Bilinmiyor")</td>
                                <td>@(message.SenderUserName ?? "Bilinmiyor")</td>                        
                                <td>@(message.ReceiverUserName ?? "Bilinmiyor")</td>
                                <td>@message.Content</td>
                                <td>@message.SentDate.ToString("g")</td>
                               
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

